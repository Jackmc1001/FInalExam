<Window x:Class="FinalExam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalExam"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="80*"/>

        </Grid.RowDefinitions>

        <Label Name="lblListing" Grid.Row="0" Grid.Column="0" Content="Property Listing" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <ListBox x:Name ="lbxPropertyList" Grid.Row="1" Grid.Column="0" Margin="20"/>
        <TextBlock x:Name ="tblkDescription" Grid.Column="1" Grid.Row="1" Margin="20"/>


    </Grid>
</Window>
