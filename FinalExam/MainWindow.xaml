        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalExam"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="287*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="317*"/>
            <ColumnDefinition Width="158*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="80*"/>

        </Grid.RowDefinitions>

        <Label Name="lblListing" Grid.Row="0" Grid.Column="0" Content="Property Listing" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="112,29,82,29"/>

        <ListBox x:Name ="lbxPropertyList" Grid.Row="1" Grid.Column="0" Margin="20" Grid.ColumnSpan="2"/>
