<Window x:Class="FinalExam.NewPropert"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalExam"
        mc:Ignorable="d"
        Title="NewPropert" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Name="lblType" Content="Type of rental" Grid.Row="0" VerticalAlignment="Center" Margin="20" />
        <Label Name="lblLocation" Content="Location" Grid.Row="1" VerticalAlignment="Center" Margin="20" />
        <Label Name="lblPrice" Content="Price" Grid.Row="2" VerticalAlignment="Center" Margin="20" />
        <Label Name="lblDescription" Content="Description" Grid.Row="3" VerticalAlignment="Center" Margin="20" />

        <TextBox Name="tboxLocation" Grid.Row="0" Height="30" Margin="100"/>
        <TextBox Name="tboxPrice" Grid.Row="1" Height="30" Margin="100"/>
        <TextBox Name="tboxDescription" Grid.Row="2" Height="30" Margin="100"/>

    </Grid>
</Window>
